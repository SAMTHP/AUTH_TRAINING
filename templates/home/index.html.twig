{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
    <style>
        body {
            background: #007bff;
            background: linear-gradient(to right, #0062E6, #33AEFF);
        }

        hr {
            border: 5px solid white;
            border-radius: 5px;
        }
    </style>
    <div class="container">
        <nav class="navbar navbar-expand-lg navbar-light bg-light shadow">
            <a class="navbar-brand" href="#">Résilience 34</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor03" aria-controls="navbarColor03" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarColor03">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="#">Accueil <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Dossiers médicaux</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Consultations</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Patients</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Mon espace</a>
                    </li>
                </ul>
            </div>
            <div class="nav-item dropdown  ">
                <button data-toggle="dropdown" id="dropdownMenuButton" class="text-primary hvr-icon-spin btn btn-outline-white nav-link dropdown-toggle" aria-expanded="true"><i class="far fa-user-circle text-info hvr-icon"></i> {{ app.user.email }}</button>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
                    <a class="dropdown-item" href="#">Mon espace</a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="{{ path('app_logout') }}">Déconnexion</a>
                </div>
            </div>
        </nav>

        <div class="d-flex justify-content-center">
            <div class="mt-4">
                <h1 class="text-uppercase text-white text-center font-weight-bold hvr-wobble-horizontal">Tableau de bord</h1>
                <hr class="divider"/>
            </div>
        </div>
        <div class="row mt-4">
            <div class="card col-sm-12 col-md-6 col-lg-3 shadow hvr-underline-from-center">
                <div class="card-body">
                    <h5 class="card-title">Dossiers médicaux</h5>
                    <h6 class="card-subtitle mb-2 text-muted">{{ app.user.email }}</h6>
                    <a href="#" class="btn icon d-flex justify-content-center hvr-icon-pulse-grow">
                        <i class="fas fa-files-medical fa-4x text-warning hvr-icon"></i>
                    </a>
                </div>
            </div>
            <div class="card col-sm-12 col-md-6 col-lg-3 shadow hvr-underline-from-center">
                <div class="card-body">
                    <h5 class="card-title">Consultations</h5>
                    <h6 class="card-subtitle mb-2 text-muted">{{ app.user.email }}</h6>
                    <a href="#" class="btn icon d-flex justify-content-center hvr-icon-pulse-grow">
                        <i class="fas fa-notes-medical fa-4x text-success hvr-icon"></i>
                    </a>
                </div>
            </div>
            <div class="card col-sm-12 col-md-6 col-lg-3 shadow hvr-underline-from-center">
                <div class="card-body">
                    <h5 class="card-title">Patients</h5>
                    <h6 class="card-subtitle mb-2 text-muted">{{ app.user.email }}</h6>
                    <a href="#" class="btn icon d-flex justify-content-center hvr-icon-pulse-grow">
                        <i class="fas fa-users-medical fa-4x text-info hvr-icon"></i>
                    </a>
                </div>
            </div>
            <div class="card col-sm-12 col-md-6 col-lg-3 shadow hvr-underline-from-center">
                <div class="card-body">
                    <h5 class="card-title">Mon espace</h5>
                    <h6 class="card-subtitle mb-2 text-muted">{{ app.user.email }}</h6>
                    <a href="#" class="btn icon d-flex justify-content-center hvr-icon-pulse-grow">
                        <i class="far fa-building fa-4x text-secondary hvr-icon"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
