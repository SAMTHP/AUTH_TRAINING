{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="/css/login.css">
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row" style="margin-top: 20%">
            <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
                <div class="card card-signin my-5">
                    <div class="card-body">
                        <h5 class="card-title text-center">Portail de connexion</h5>
                        <form class="form-signin" method="post">
                            {% if error %}
                                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}

                            {# {% if browserValid is not defined %}
                               
                            {% endif %} #}

                            {% if app.request.get('checkBrowser') == "true" %}
                                <div class="alert alert-danger">Merci de valider votre navigateur via le mail que nous vous avons envoyé.</div>
                            {% endif %}

                            {% if app.user %}
                                <div class="mb-3">
                                    Vous êtes connecté en tant que {{ app.user.username }}, <a href="{{ path('app_logout') }}">Se déconnecter</a>
                                </div>
                            {% endif %}
                            <div class="form-label-group">
                                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
                                <label for="inputEmail">Email</label>
                            </div>

                            <div class="form-label-group">
                                <input type="password" id="inputPassword" name="password" class="form-control" placeholder="Password" required>
                                <label for="inputPassword">Mot de passe</label>
                            </div>

                            <div class="custom-control custom-checkbox mb-3">
                                <input type="checkbox" class="custom-control-input" id="customCheck1">
                                <label class="custom-control-label" for="customCheck1">Remember password</label>
                            </div>
                            <input type="hidden" name="_csrf_token"value="{{ csrf_token('authenticate') }}">
                            <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">S'authentifier</button>
                            <hr class="my-4">
                            <a href="{{ path('app_register') }}" class="btn btn-lg btn-warning btn-block text-uppercase">S'enregistrer</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
