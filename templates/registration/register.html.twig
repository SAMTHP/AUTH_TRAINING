{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-muted text-center" style="margin-top: 10%">S'enregistrer</h1>

        {{ form_start(registrationForm) }}
        <div class="d-flex justify-content-center">
            <div class="row col-lg-6 mb-4 p-3 border shadow">
                <div class="">
                    <div class="row">
                        <div class="col-lg-12">
                            <label for="">Email</label><br>
                            {{ form_errors(registrationForm.email) }}
                            {{ form_widget(registrationForm.email) }}
                        </div>
                        <div class="col-lg-12">
                            <label for="">Mot de passe</label><br>
                            {{ form_widget(registrationForm.plainPassword) }}
                            {{ form_errors(registrationForm.plainPassword) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-10">
                            {{ form_widget(registrationForm.checkPassword) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-10">
                            {{ form_widget(registrationForm.agreeTerms) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="d-flex justify-content-center">
            <button class="btn btn-success shadow">S'enregister</button>
        </div>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
